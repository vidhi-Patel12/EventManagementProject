@model Event.Models.BookingFlower
@{
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<div id="" class="card row" style="margin-top:90px; margin-left:120px;width:40%; border-width: 2px;border-style: solid; ">
    <div class="d-flex container-fluid">
        <div class="col-md-8">
            <form>
                <h3><span class="label label-info" style="margin-left:10px ;margin-top:50px">Book Flower</span></h3>
                <div class="form-group">
                    @* <label class="control-label" asp-for="VenueName">VenueID</label> *@
                    <input type="hidden" class="form-control" id="BookingFlowerID" value="0" />
                    @* <span asp-validation-for="VenueName" class="text-danger"></span> *@
                </div>

                <div class="form-check" id="FlowerID" onchange="changeImage()">
                    @*  <input class="form-check-input" type="checkbox" id="EquipmentID" name="DJ" value="something" checked>
                    <label class="form-check-label" id="EquipmentID"></label> *@
                </div>
                <div>
                    <img src="" alt="Image" id="FlowerImage" style="width: 200px; height:150px" />
                </div>
                @* <div class="form-group">
                <label class="control-label" asp-for="FlowerName">Dish Name</label>
                <input asp-for="FlowerName" type="hidden" class="form-control" id="FlowerName" />
                <span asp-validation-for="FlowerName" class="text-danger"></span>
                </div> *@

                <input type="hidden" class="form-control" id="BookingID" />
                <div>
                    <button onclick="fnBookingId()" class="btn btn-success" type="button">Book Flower</button>
                    @Html.ActionLink("Cancel", "Dashboard", "Customer", null, new { @class = "btn btn-primary" })
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/bookingflower.js"></script>



<script>
    function changeImage() {
        var checkedOptions = document.querySelectorAll('#FlowerID input[type="checkbox"]:checked');

        if (checkedOptions.length > 0) {
            // If at least one checkbox is checked, use the first checked option
            var firstCheckedOption = checkedOptions[0];
            var flowerFilePath = firstCheckedOption.getAttribute('data-img');

            if (flowerFilePath) {
                document.getElementById("FlowerImage").src = flowerFilePath;
            } else {
                // If data-img attribute is not defined, set a default image
                document.getElementById("FlowerImage").src = "/wwwroot/FlowerImages.jpg";
            }
        } else {
            // If no checkbox is checked, set a default image
            document.getElementById("FlowerImage").src = "/wwwroot/FlowerImages.jpg";
        }
    }

</script>


<script src="~/js/site.js"></script>
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}